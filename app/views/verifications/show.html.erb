<style>
  .container {
    max-width: 800px;
    margin: 40px auto;
    padding: 30px;
    background-color: #ffffff;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border-radius: 12px;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  }
  h1 {
    font-size: 2rem;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 30px;
    text-align: center;
  }
  .section {
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 1px solid #edf2f7;
  }
  h2 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 12px;
  }
  h3 {
    font-size: 1rem;
    font-weight: 600;
    color: #4a5568;
    margin-bottom: 8px;
  }
  pre {
    background-color: #f7fafc;
    padding: 16px;
    border-radius: 8px;
    overflow-x: auto;
    font-size: 0.875rem;
    color: #2d3748;
    border: 1px solid #e2e8f0;
  }
  .status {
    margin-top: 10px;
    font-weight: 700;
    font-size: 1rem;
  }
  .status.success {
    color: #38a169;
  }
  .status.error {
    color: #e53e3e;
  }
  .empty {
    color: #a0aec0;
    font-style: italic;
  }
  .actions {
    margin-top: 40px;
    text-align: center;
  }
  .link-btn {
    color: #4c51bf;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
  }
  .link-btn:hover {
    text-decoration: underline;
    color: #434190;
  }
  .images-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-top: 16px;
  }
  .image-card {
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    overflow: hidden;
  }
  .image-card img {
    width: 100%;
    height: auto;
    display: block;
  }
  .image-title {
    padding: 8px;
    background: #f7fafc;
    border-bottom: 1px solid #e2e8f0;
    font-size: 0.875rem;
    font-weight: 600;
    text-align: center;
  }
  .info-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
    margin-bottom: 20px;
  }
  .info-item label {
    display: block;
    font-size: 0.75rem;
    color: #718096;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .info-item span {
    font-size: 1rem;
    color: #2d3748;
    font-weight: 500;
  }
</style>

<div class="container">
  <h1>Verification Results</h1>
  
    <%# User Inputs %>
    <div class="section">
        <h2>User Information</h2>
        <div class="info-grid">
            <div class="info-item">
                <label>Email</label>
                <span><%= @contact_info[:email] %></span>
            </div>
            <div class="info-item">
                <label>Phone</label>
                <span><%= @contact_info[:phone] %></span>
            </div>
            <div class="info-item">
                <label>Document Type</label>
                <span style="text-transform: uppercase;"><%= @contact_info[:document_type] || "INE" %></span>
            </div>
        </div>
    </div>

    <%# Captured Images %>
    <div class="section">
        <h2>Captured Images</h2>
        <div class="images-grid">
            <% if @inputs && @inputs[:face_image].present? %>
                <div class="image-card">
                    <div class="image-title">Selfie</div>
                    <img src="data:image/jpeg;base64,<%= @inputs[:face_image] %>" alt="Selfie" />
                </div>
            <% end %>
            
            <% if @inputs && @inputs[:front_image].present? %>
                <div class="image-card">
                    <div class="image-title">Document Front</div>
                    <img src="data:image/jpeg;base64,<%= @inputs[:front_image] %>" alt="Front ID" />
                </div>
            <% end %>

            <% if @inputs && @inputs[:back_image].present? %>
                <div class="image-card">
                    <div class="image-title">Document Back</div>
                    <img src="data:image/jpeg;base64,<%= @inputs[:back_image] %>" alt="Back ID" />
                </div>
            <% end %>
        </div>
    </div>
  
    <%# CURP Results %>
    <div class="section">
      <h2>CURP (RENAPO)</h2>
      <% if @results[:curp] %>
        <pre><%= JSON.pretty_generate(@results[:curp]) %></pre>
        <% if @results[:curp]['estatus'] == 'OK' %>
            <div class="status success">Valid CURP</div>
        <% else %>
            <div class="status error">Invalid CURP</div>
        <% end %>
      <% else %>
        <p class="empty">No CURP provided or found.</p>
      <% end %>
    </div>

    <%# OCR Results %>
    <div class="section">
      <h2>ID OCR extraction</h2>
      <% if @results[:ocr] %>
        <pre><%= JSON.pretty_generate(@results[:ocr]) %></pre>
      <% else %>
        <p class="empty">No ID images provided.</p>
      <% end %>
    </div>

    <%# INE Validation Results %>
    <div class="section">
      <h2>INE Validation (Nominal List)</h2>
      <% if @results[:ine_validation] %>
        <pre><%= JSON.pretty_generate(@results[:ine_validation]) %></pre>
         <% if @results[:ine_validation]['estatus'] == 'OK' %>
            <div class="status success">Valid in INE List</div>
        <% elsif @results[:ine_validation]['estatus'] == 'SKIPPED' %>
            <div class="status" style="color: #ed8936;">Validation Skipped (<%= @results[:ine_validation]['mensaje'] %>)</div>
        <% else %>
            <div class="status error">Invalid or Not Found in INE List</div>
        <% end %>
      <% else %>
        <p class="empty">Skipped.</p>
      <% end %>
    </div>

    <%# Blocklist Results %>
    <div class="section">
      <h2>Blocklist Check</h2>
      <% if @results[:blocklist] %>
        <pre><%= JSON.pretty_generate(@results[:blocklist]) %></pre>
         <% if @results[:blocklist]['conteoResultados'].to_i > 0 %>
            <div class="status error">POSSIBLE MATCH FOUND IN BLOCKLISTS</div>
        <% else %>
            <div class="status success">Clean (No matches found)</div>
        <% end %>
      <% else %>
        <p class="empty">Skipped.</p>
      <% end %>
    </div>

    <%# Face Match Results %>
    <div class="section">
      <h2>Biometrics (Face Match)</h2>
      <% if @results[:face_match] %>
        <pre><%= JSON.pretty_generate(@results[:face_match]) %></pre>
         <% similarity = @results[:face_match]['similarity'].to_f %>
         
         <%# Similarity is usually 0-1 or 0-100, checking if > 0.8 or 80.0 %>
         <% similarity = @results[:face_match]['similitud'].to_f %>
         <% is_success = (@results[:face_match]['estatus'] == 'OK') && (similarity > 80.0) %>
         
         <% if is_success %>
            <div class="status success">Face Match Successful (<%= similarity %>%)</div>
        <% else %>
            <div class="status error">Face Match Failed (<%= similarity %>%)</div>
        <% end %>
      <% else %>
        <p class="empty">Skipped.</p>
      <% end %>
    </div>

  <div class="actions">
    <%= link_to "New Verification", root_path, class: "link-btn" %>
  </div>
</div>
